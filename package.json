{
  "name": "boken",
  "version": "0.0.1",
  "author": {
    "name": "Enys Mones",
    "email": "enys.mones@codescene.com",
    "url": "enysmones.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/empear-analytics/boken",
  "main": "boken.min.js",
  "module": "../boken/src/index.js",
  "scripts": {
    "build:docs": "node docs/index.js",
    "build": "rollup -c",
    "dev": "nodemon --watch src --watch test --ext js --exec 'npm run-script test'",
    "dev:docs": "nodemon --watch docs --ext scss,js,pug --exec 'npm run-script build:docs'",
    "standard": "standard --fix src/**/*.js",
    "test": "jest && jest-coverage-badges; cp coverage/*.svg img"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "babel-jest": "^28.1.3",
    "documentation": "^13.2.5",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.2",
    "highlight.js": "^10.2.0",
    "istanbul-reports": "^3.1.5",
    "jest": "^28.1.3",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^28.1.3",
    "lodash.flattendeep": "^4.4.0",
    "node-sass": "^7.0.0",
    "nodemon": "^2.0.19",
    "pug": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-strip-code": "^0.2.7",
    "standard": "^16.0.4"
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "resetModules": true,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
